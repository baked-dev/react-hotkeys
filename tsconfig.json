{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017", 
      "DOM"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "include": [
    "src/**/*"
  ]
}